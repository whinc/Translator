<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefWidth="600" prefHeight="400" stylesheets="@/css/main.css"
      fx:controller="com.whinc.controller.MainWindowController" xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox fx:id="title_bar" prefHeight="70" fillWidth="true">
        </VBox>
        <VBox>
            <padding><Insets top="10" bottom="10" right="10" left="10"/></padding>
            <TextArea fx:id="sourceTxtArea" promptText="source text"/>
            <HBox spacing="10">
                <VBox.margin>
                    <Insets top="10" bottom="10" left="0" right="10"/>
                </VBox.margin>
                <children>
                    <ComboBox fx:id="typeComboBox">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="English->Chinese"/>
                                <String fx:value="Chinese->English"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Button fx:id="translateBtn" text="Translate" onAction="#translate"/>
                    <Button fx:id="clearBtn" text="Clear" onAction="#clear"/>
                </children>
            </HBox>
            <TextArea fx:id="targetTxtArea" promptText="target text" />
        </VBox>
    </children>
</VBox>