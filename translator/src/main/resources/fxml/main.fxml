<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400" prefWidth="600" stylesheets="@/css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.whinc.controller.MainWindowController">
    <children>
        <VBox fx:id="title_bar" fillWidth="true" prefHeight="100">
        </VBox>
        <VBox>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
           <children>
               <TextArea fx:id="sourceTxtArea" promptText="source text" />
               <HBox spacing="10">
                   <VBox.margin>
                       <Insets bottom="10" left="0" right="10" top="10" />
                   </VBox.margin>
                   <children>
                       <ComboBox fx:id="typeComboBox" promptText="自动检测">
                           <items>
                               <FXCollections fx:factory="observableArrayList">
                                   <String fx:value="English-&gt;Chinese" />
                                   <String fx:value="Chinese-&gt;English" />
                               </FXCollections>
                           </items>
                       </ComboBox>
                       <Button fx:id="translateBtn" onAction="#translate" text="Translate" />
                       <Button fx:id="clearBtn" onAction="#clear" text="Clear" />
                       <ProgressBar fx:id="progressBar" prefHeight="27.0" prefWidth="198.0" progress="0.0" />
                   </children>
               </HBox>
               <TextArea fx:id="targetTxtArea" promptText="target text" />
           </children>
        </VBox>
    </children>
</VBox>
